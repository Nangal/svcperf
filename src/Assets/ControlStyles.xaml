                                          Stretch="Fill"
                                          StrokeThickness="0.25"
                                          UseLayoutRounding="False"
                                          Width="2.468"
                                          Canvas.Top="1.525">
                                        <Path.Stroke>
                                            <SolidColorBrush Color="{StaticResource Gray2}" />
                                        </Path.Stroke>
                                    </Path>
                                    <Path Data="M405.14063,248.65625 L405.14063,250.01588"
                                          Fill="White"
                                          Height="2.36"
                                          Stretch="Fill"
                                          UseLayoutRounding="False"
                                          Width="1"
                                          StrokeThickness="0.25"
